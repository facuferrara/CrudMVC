@model List<CrudMVC.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Mis Datos";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="row" style="text-align:right; padding:5px;">
        <a href="~/Crud/Nuevo" class="btn btn-primary">Nuevo</a>
    </div>
        
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Correo</td>
                    <td>
                        <a class="btn btn-default"  href="~/Crud/Editar/oElemento.id">Editar</a>
                        <a class="btn btn-danger"  href="~/Crud/Eliminar/oElemento.id">Eliminar</a>

                    </td>
                </tr>
            }

        </table>

    </div>
</div>
